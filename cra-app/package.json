{
  "name": "cra-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "flutter-module-rn": "file:../rn-flutter",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "prestart": "rimraf node_modules/.cache/ && yarn copy-flutter-assets",
    "start": "react-scripts start",
    "prebuild": "yarn copy-flutter-assets",
    "build": "react-scripts build",
    "test": "yarn copy-flutter-assets && react-scripts test",
    "copy-flutter-assets": "rimraf public/flutter && ncp ../rn-flutter/build/web public/flutter",
    "upgrade-flutter": "cd ../rn-flutter && yarn rn:build && cd - && yarn upgrade flutter-module-rn"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^5.0.1"
  }
}
